.authform
  = twitter_bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .h3 Log in
    = devise_error_messages!
    .form-group
      = f.email_field :email, :autofocus => true, class: 'form-control', tabindex: 1
      - if devise_mapping.recoverable?
        = link_to "Forgot password?", new_password_path(resource_name), class: 'right'
      = f.password_field :password, class: 'form-control', tabindex: 2
      = f.submit 'Log in', :class => 'button right'
      - if devise_mapping.rememberable?
        =f.toggles do
          = f.check_box :remember_me
          = f.label :remember_me
